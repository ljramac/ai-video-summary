    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "engines": {
    "node": "24.9.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
