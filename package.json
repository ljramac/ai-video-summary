{
  "name": "@ljrama/ai-video-summary",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/ljramac/ai-video-summary#readme",
  "bin": {
    "ai-summary": "./dist/cjs/interfaces/cli/index.js"
  },
  "bugs": {
    "url": "https://github.com/ljramac/ai-video-summary/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljramac/ai-video-summary.git"
  },
  "license": "ISC",
  "author": "Lino Rama <ljramac@gmail.com>",
  "type": "commonjs",
  "main": "src/index",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx jest test/**/*.test.ts",
    "lint": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "prettier": "npx prettier --write",
    "build": "./bin/build.sh",
    "start": "./bin/cli.sh",
    "dev": "ts-node --compiler-options '{\"module\":\"commonjs\"}' src/interfaces/cli/index.ts",
    "prepare": "npx husky && npm run build"
  },
  "dependencies": {
    "axios": "1.12.2",
    "child-process-promise": "2.2.1",
    "commander": "14.0.1",
    "config": "4.1.1",
    "inquirer": "12.10.0",
    "openai": "6.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@types/child-process-promise": "2.2.6",
    "@types/config": "3.3.5",
    "@types/jest": "30.0.0",
    "@types/node": "24.6.2",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.16",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "engines": {
    "node": "24.9.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}